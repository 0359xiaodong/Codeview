<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:descendantFocusability="blocksDescendants"
        >
    <ImageView
            android:id="@+id/list_view_item_main_image"
            android:contentDescription="@string/list_view_item_main_relative_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            />
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
        <LinearLayout
                android:id="@+id/main_date_and_mark"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:descendantFocusability="blocksDescendants"
                >
            <TextView
                    android:id="@+id/list_view_item_main_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />
            <ImageButton
                    android:id="@+id/list_view_item_main_mark"
                    android:contentDescription="@string/list_view_item_main_relative_mark"
                    android:src="@drawable/ic_action_unmark"
                    android:background="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/main_title_and_content"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:layout_toLeftOf="@+id/main_date_and_mark"
                android:layout_alignParentLeft="true"
                >
            <TextView
                    android:id="@+id/list_view_item_main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    />
            <TextView
                    android:id="@+id/list_view_item_main_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>